@model StoreWebApp.Models.StoreViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>StoreViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
    </dl>
    <h4>Inventory</h4>
    <p>
        <a asp-action="ImportProduct" asp-route-id="@Model.StoreId">Add New Product</a>
    </p>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @await Html.PartialAsync("_InventoryDetails", Model.Inventory)
        </dd>
    </dl>
    <p>
        <a asp-action="StoreOrders" asp-route-id="@Model.StoreId">Orders are made at this Store</a>
    </p>
</div>
