@model StoreLibrary.Store

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.StoreName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
    </dl>
    <h4>Inventory</h4>
    <p>
        <a asp-action="ImportProduct" asp-route-id="@Model.StoreId">Add  New Product</a>
    </p>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @await Html.PartialAsync("_InventoryDetails", Model.Inventory)
        </dd>
    </dl>
    <p>
        <a asp-action="LocationOrders" asp-route-id="@Model.StoreId">Orders made at this location</a>
    </p>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StoreId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
