@model StoreWebApp.Models.InventoryViewModel

@{
    ViewData["Title"] = "AddToInventory";
}

<h1>Add To Inventory</h1>

<h4>@Model.ProductName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToInventory">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryId" />
            <input type="hidden" asp-for="StoreId" />
            <input type="hidden" asp-for="ProductName" />
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" value="1" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Import" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
